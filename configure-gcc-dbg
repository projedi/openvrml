#!/bin/bash

./$(dirname $0)/configure -C --prefix=$HOME --disable-static --enable-gecko-rpath --enable-gtk-doc CXX='g++ -pipe' CPPFLAGS="-D_GLIBCXX_DEBUG -D_GLIBCXX_DEBUG_PEDANTIC -I$HOME/include" CXXFLAGS='-g3 -O0 -Wall -Wextra -Wno-missing-braces -Wno-missing-field-initializers -Wno-attributes' LDFLAGS="-L$HOME/lib64 -L$HOME/lib" BOOST_LIB_SUFFIX='-mt' JAVA_HOME=/usr/lib/jvm/jre "$*"
